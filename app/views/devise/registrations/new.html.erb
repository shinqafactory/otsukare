<div align="center">
	<div class="sinup-Body" style="padding-top:20px">
		<p class="main-font">ユーザー登録</p>

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  <div><%= f.email_field :email, :autofocus => true, :placeholder => 'メールアドレスを入力してください' %></div>
		  <div><%= f.password_field :password, :placeholder => 'パスワードを入力してください' %></div>
		  <div><%= f.password_field :password_confirmation, :placeholder => 'パスワード確認用' %></div>

		  <div><%= f.submit "    登録    ", :class => 'btn-main' %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>