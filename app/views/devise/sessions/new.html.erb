<h2>ログイン</h2>
<br />

<div style="padding: 10px">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.email_field :email, :autofocus => true, :placeholder => 'メールアドレスを入力してください' %></div>
  <div><%= f.password_field :password, :placeholder => 'パスワードを入力してください' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> 次回から自動的にログイン　</div>
  <% end -%>
<br />
  <div><%= f.submit "ログイン", :class => "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
