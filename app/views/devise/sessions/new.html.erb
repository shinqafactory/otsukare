<div align="center">
	<div class="login-Body" style="padding-top:20px">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div><%= f.email_field :email, :autofocus => true, :placeholder => 'メールアドレスを入力してください' %></div>
		  <div><%= f.password_field :password, :placeholder => 'パスワードを入力してください' %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> 次回から自動的にログイン　</div>
		  <% end -%>
		<br />
		  <div><%= f.submit "    ログイン    ", :class => "btn-main" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
